# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/culinaryworld
# For production mongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/culinaryworld

# JWT Secret (use a strong, random string)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# Email Configuration (using Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
ADMIN_EMAIL=admin@culinaryworld.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting
MAX_REQUEST_PER_WINDOW=100
RATE_LIMIT_WINDOWS_MS=900000

# Security
BCRYPT_SALT_ROUNDS=10

# Database Pool Settings
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2
